<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paru.chatty">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/chat_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/chat_app_icon_round"
        android:supportsRtl="true"
        android:resizeableActivity="false"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.VisitUserProfileActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".Activity.ViewFullImageActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".Activity.MessageChatActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".Activity.WelcomeActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".Activity.RegisterActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"></activity>

        <service
            android:name=".Notifications.MyFirebaseMessaging"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".Notifications.MyFirebaseInstanceId"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>